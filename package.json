{
  "name": "ext-v3",
  "version": "0.0.1",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*",
    "packages/wallets/*"
  ],
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev --parallel --no-cache",
    "dev:ext": "pnpm run dev --filter ramper-extension",
    "build:ext": "pnpm run build --filter ramper-extension --force",
    "build:inpage": "pnpm run build --filter @wallet/extension-inpage --force",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "format:ramper": "prettier --write \"apps/ramper-extension/**/*.{ts,tsx,md}\"",
    "clean": "rm -rf .turbo && rm -rf node_modules && rm -rf dist",
    "b": "pnpm run build --filter @wallet/",
    "prepare": "husky install"
  },
  "devDependencies": {
    "@changesets/cli": "^2.26.1",
    "@commitlint/cli": "^17.4.4",
    "@commitlint/config-conventional": "^17.4.4",
    "eslint-config-custom": "workspace:*",
    "husky": "^8.0.0",
    "prettier": "latest",
    "turbo": "^1.7.1"
  },
  "engines": {
    "node": ">=14.0.0"
  },
  "overrides": {
    "lmdb": "2.6.0-alpha6",
    "@lmdb/lmdb-darwin-arm64": "2.6.0-alpha6",
    "@lmdb/lmdb-darwin-x64": "2.6.0-alpha6"
  },
  "packageManager": "pnpm@7.9.3",
  "pnpm": {
    "patchedDependencies": {
      "@wallet/constants@3.0.4": "patches/@wallet__constants@3.0.4.patch",
      "@wallet/utils@3.0.5": "patches/@wallet__utils@3.0.5.patch"
    }
  }
}
