{
  "extends": "plasmo/templates/tsconfig.base",
  "exclude": ["node_modules"],
  "include": [".plasmo/index.d.ts", "./**/*.ts", "./**/*.tsx"],
  "compilerOptions": {
    "jsx": "react-jsx",
    "esModuleInterop": true,
    "paths": {
      "~*": ["./src/*"],
      "@*": ["./public/*"],
      "$/*": ["@wallet/screen"],
    },
    "baseUrl": "."
  }
}
